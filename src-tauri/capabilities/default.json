{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "core:event:allow-listen",
    "core:event:allow-unlisten",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "dialog:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "core:path:default",
    "core:path:allow-resolve-directory"
  ]
}